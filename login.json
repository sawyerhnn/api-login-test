{
  "swagger": "2.0",
  "info": {
    "title": "Mountebank API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/login": {
      "post": {
        "summary": "Mock API login",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string"
                },
                "errorMessage": {
                  "type": "string"
                },
                "user": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "role": {
                      "type": "string"
                    },
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string"
                },
                "errorMessage": {
                  "type": "string"
                },
                "user": {
                  "type": "string"
                }
              }
            }
          },
          "403": {
            "description": "Account Locked",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string"
                },
                "errorMessage": {
                  "type": "string"
                },
                "user": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string"
                },
                "errorMessage": {
                  "type": "string"
                },
                "user": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
